{
	"_version": "1.14.0",
	"sap.app": {
		"id": "ns.welcome_card",
		"type": "card",
		"title": "welcome card",
		"subTitle": "welcome ui integration card",
		"applicationVersion": {
			"version": "1.0.0"
		}
	},
	"sap.ui": {
		"technology": "UI5",
        "deviceTypes": {"desktop": true, "phone": true, "tablet": true},
		"icons": {
			"icon": "sap-icon://list"
		}
	},
	"sap.card": {
		"type": "Object",
		"content": {
			"groups": [
				{
					"alignment": "Stretch",
					"items": [
						{
							"type": "Image",
							"src": "./images/welcomeTile.jpg",
							"fullWidth": true,
							"height": "200px",
							"imageFit": "cover",
							"imagePosition": "center",
							"overlay": {
								"supertitle": "Sun, May 28",
								"title": "Hello, John",
								"subTitle": "Today will be a good day!",
								"textColor": "#fff",
								"verticalPosition": "Center",
								"background": "linear-gradient(90deg, rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0))",
								"textFilter": "drop-shadow(0px 0px 1px #000)",
								"animation": "FadeIn"
							}
						}
					]
				}
			]
		}
	},
    "sap.platform.mobilecards": {
        "compatible": false
    }
}